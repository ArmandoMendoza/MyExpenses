<h2> Hola <%= current_user.name %>!</h2>
<p>
Tu balance actual es:
<%= label_for_balance(current_user.balance) %>
</p>

En el mes de <%= month_to_words(Date.today.month) %>
<p>
Tus gastos son de
<%= label_for_amount(current_user.total_expenses_at_month) %>
</p>
<p>
Tus ingresos son de
<%= label_for_amount(current_user.total_incomes_at_month) %>
</p>

<div class="btn-toolbar">
	<div class="btn-group">
	<%= link_icon_to "Gastos", "icon-download icon-white", new_expense_path,
									 class: "btn btn-primary" %>
	<%= caret_btn("", "#", class: "btn btn-primary dropdown-toggle",
								data: { toggle: "dropdown"}) %>
	<ul class="dropdown-menu">
		<li><%= link_to "Ver Gastos", expenses_path %></li>
		<li><%= link_to "Agregar Gasto", new_expense_path %></li>
	</ul>
	</div>

	<div class="btn-group">
	<%= link_icon_to "Ingresos", "icon-upload icon-white", new_income_path,
									 class: "btn btn-warning" %>
	<%= caret_btn("", "#", class: "btn btn-warning dropdown-toggle",
								data: { toggle: "dropdown"}) %>
	<ul class="dropdown-menu">
		<li><%= link_to "Ver Ingresos", incomes_path %></li>
		<li><%= link_to "Agregar Ingreso", new_income_path %></li>
	</ul>
	</div>
</div>